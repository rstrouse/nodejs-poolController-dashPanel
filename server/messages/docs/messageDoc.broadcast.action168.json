    {
      "start": 1,
      "length": 1,
      "name": "Sub-Item",
      "desc": "The sub-item within the category. Meaning varies by category.",
      "dataType": "byte"
    },
    {
      "start": 2,
      "length": 1,
      "name": "Item Index",
      "desc": "The 0-based index of the item being configured (e.g., circuit id - 1).",
