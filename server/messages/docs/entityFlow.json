        },
        "features": {
          "label": "Features",
          "matches": [
            { "protocol": "broadcast", "action": 1 },
            { "protocol": "broadcast", "action": 2 },
            { "protocol": "broadcast", "action": 204 },
            { "protocol": "broadcast", "action": 30, "payload0": 15 },
